# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/hueacc_db
DB_HOST=localhost
DB_PORT=27017
DB_NAME=hueacc_db
DB_USER=
DB_PASSWORD=
DB_MAX_POOL_SIZE=10
DB_SERVER_SELECTION_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000

# JWT Configuration (TODO: Change in production)
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_REFRESH_SECRET=your_refresh_secret_key_change_in_production
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=28800000

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Request Limits
JSON_LIMIT=10mb
URL_ENCODED_LIMIT=10mb

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
TEMP_UPLOAD_PATH=./temp
MAX_FILES_PER_UPLOAD=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Email Configuration (TODO: Configure for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@hueacc.edu.et

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Feature Flags
ENABLE_AUDIT_LOGGING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_MEMBER_MODULE=false
